<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ingoo.ingoos.IngooActivity" >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/item_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_today"
            android:textSize="@dimen/itemsize" />
        <Button
            android:id="@+id/item_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_test1"
            android:layout_alignParentRight="true"
            android:text="mt"
            android:textSize="@dimen/itemsize"/>
        </RelativeLayout>
        
    <ListView
        android:id="@+id/arraryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/> 
        
    <TextView
        android:id="@+id/item_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:textSize="@dimen/itemsize"
        android:text="@string/string_today" />
    <TextView
        android:id="@+id/item_todos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_today"
        android:textSize="@dimen/itemsize"
        android:text="@string/string_todos" />
    <TextView
        android:id="@+id/item_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_todos"
        android:textSize="@dimen/itemsize"
        android:text="@string/string_summary" />
</RelativeLayout>
